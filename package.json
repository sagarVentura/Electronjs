{
    "name": "my-scorm-viewer",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.yourorg.scormviewer",
        "productName": "SCORM Viewer",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/.*",
            "!**/*.map"
        ],
        "win": {
            "target": "portable"
        }
    },
    "devDependencies": {
        "electron": "^25.0.0",
        "electron-builder": "^23.6.0"
    },
    "dependencies": {
        "node-disk-info": "^1.3.0",
        "node-fetch": "^3.3.2"
    }
}
